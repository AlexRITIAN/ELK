<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lenovo.elk3.dao.UserDao">

	<insert id="insert" parameterType="UserBean" useGeneratedKeys="true" keyProperty="id">
		insert
		into
		tbl_user(name,accountNo,email,password,lockStatus,expireTime,allowIps,createTime,editTime)
		values(#{name},#{accountNo},#{email},#{password},#{lockStatus},#{expireTime},#{allowIps},#{createTime},#{editTime})
	</insert>

	<select id="selectByName" resultType="UserBean" parameterType="String">
		select * from tbl_user where name=#{name}
	</select>

	<select id="selectPermissionById" resultType="PermissionBean"
		parameterType="int">
		select p.name,p.operationUrl,p.id,p.pid from
		tbl_user_role_relation ur join tbl_role_permission_relation rp join
		tbl_permission p on ur.role_id = rp.role_id and rp.permission_id =
		p.id where ur.user_id = #{id};
	</select>

	<select id="selectPermissionByUrl" resultType="PermissionBean"
		parameterType="String">
		select * from tbl_permission where operationUrl=#{url}
	</select>

	<select id="selectPermissionByPid" resultType="PermissionBean"
		parameterType="int">
		select * from tbl_permission where id = #{pid}
	</select>

	<select id="selectAllUser" resultType="UserBean">
		select * from tbl_user
	</select>

	<select id="selectUserById" resultType="UserBean" parameterType="int">
		select * from tbl_user where id = #{userId}
	</select>

	<select id="selectRoleByUserId" resultType="RoleBean"
		parameterType="int">
		select
		r.id,r.code,r.name,r.remark,r.createTime,r.editTime from
		tbl_user_role_relation as urr join tbl_role as r on urr.role_id = r.id
		where urr.user_id = #{userId}
	</select>

	<select id="selectAllRole" resultType="RoleBean">
		select * from tbl_role
	</select>

	<update id="update" parameterType="UserBean">
		update tbl_user set
		name=#{name},password=#{password},lockStatus=#{lockStatus},editTime=#{editTime}
		where id=#{id}
	</update>

	<delete id="delete" parameterType="java.util.List">
		delete from tbl_user where id in
		<foreach collection="list" index="index" item="item" open="("
			separator="," close=")">
			#{item.id}
		</foreach>
	</delete>
</mapper>
